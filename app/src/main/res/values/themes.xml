<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <!-- Light application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!--    Primary colors  -->
        <item name="colorPrimary">@color/lightPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/lightPrimaryDarkColor</item>
        <item name="colorOnPrimary">@color/lightPrimaryTextColor</item>
        <!--    Secondary colors  -->
        <item name="colorSecondary">@color/lightSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/lightSecondaryDarkColor</item>
        <item name="colorOnSecondary">@color/lightSecondaryTextColor</item>
        <!--    Error colors    -->
        <item name="colorError">@color/lightColorError</item>
        <item name="colorOnError">@color/lightSecondaryTextColor</item>
        <!--    Surface colors  -->
        <item name="colorSurface">@color/lightPrimaryDarkColor</item>
        <item name="colorOnSurface">@color/lightPrimaryTextColor</item>
        <!--    Widget styles   -->
        <item name="tabStyle">@style/AppTheme.TabLayout</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/lightSecondaryColor</item>
        <item name="tabSelectedTextColor">@color/lightSecondaryColor</item>
        <item name="tabTextColor">@color/lightPrimaryTextColor</item>
    </style>
</resources>