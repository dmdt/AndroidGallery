<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!--    Primary colors  -->
        <item name="colorPrimary">@color/darkPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/darkPrimaryDarkColor</item>
        <item name="colorOnPrimary">@color/darkPrimaryTextColor</item>
        <!--    Secondary colors    -->
        <item name="colorSecondary">@color/darkSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/darkSecondaryLightColor</item>
        <item name="colorOnSecondary">@color/darkSecondaryTextColor</item>
        <!--    Error colors    -->
        <item name="colorError">@color/lightColorError</item>
        <item name="colorOnError">@color/darkPrimaryTextColor</item>
        <!--    Surface colors  -->
        <item name="colorSurface">@color/darkPrimaryDarkColor</item>
        <item name="colorOnSurface">@color/darkPrimaryTextColor</item>
        <!--    Widget styles   -->
        <item name="tabStyle">@style/AppTheme.TabLayout</item>
        <item name="swipeRefreshLayoutProgressSpinnerBackgroundColor">@color/darkPrimaryLightColor</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/darkSecondaryColor</item>
        <item name="tabSelectedTextColor">@color/darkSecondaryColor</item>
        <item name="tabTextColor">@color/darkPrimaryTextColor</item>
    </style>
</resources>